@model IEnumerable<GsmRanking.Viewmodels.News.NewsCardViewModel>
<div class="row">
	<div class="col-md-12">
		<h4>Newsy</h4>
	</div>
</div>
<div class="row">
	@foreach (var news in Model) {
	<div class="col-lg-4 col-md-6 col-sm-12" style="margin-top: 10px;">
		<div class="card" style="margin-bottom:1em; height: 100%;">
			<div class="card-block">
				<a href="@news.Url">
					<h4 class="card-title">@news.Title</h4>
					<img class="card-img-top" src="data:image/jpg;base64,@news.Image" alt="@news.Title" style="width:100%; ">
				</a>
				<p class="card-text">@news.ShortDescription</p>
			</div>
			<div class="card-footer">
			    <small class=""><fa class="fa-calendar"/> @news.PublishDate</small>
			    <small class="text-muted pull-right">&nbsp;<fa class="fa-eye"/> @news.ViewsCount </small>
                <small class="text-muted pull-right"><fa class="fa-comment"/> @news.CommentCount</small>
			</div>
		</div>
	</div>
	}
</div>
