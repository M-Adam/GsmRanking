@using GsmRanking.Models;
@model News

@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>
<img class="card-img-top" src="data:image/jpg;base64,@Model.Image" alt="@Model.Title" style="height: auto; width: 300px; ">
<p>@Model.ShortText</p>
<br />
<div>
    <p>@Html.Raw(@Model.Content)</p>
</div>


