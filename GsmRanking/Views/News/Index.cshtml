@using GsmRanking.Models;
@model IList<News>

@{
    Layout = "_Layout";
}

<h1>Wszystkie newsy</h1>
@*TODO: Show only for admin*@
<a class="btn btn-success pull-right" asp-controller="News" asp-action="Create">Create news</a>
<div class="row">
    <div class="container">
        <div class="panel-group" id="accordion">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="panel panel-default" style="margin-top:10px;">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion">
                                @Model[i].Title
                            </a>
                        </h3>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <img class="card-img-top" src="data:image/jpg;base64,@Model[i].Image" alt="@Model[i].Title" style="height: auto; width: 300px; ">
                            <p>@Model[i].ShortText</p>
                            <a class="btn btn-primary btn-sm" asp-controller="News" asp-action="Details" asp-route-id="@Model[i].IdNews">Read more</a>
                            <a class="btn btn-warning btn-sm" asp-controller="News" asp-action="Edit" asp-route-id="@Model[i].IdNews">Edit</a>
                            @if (i < Model.Count() - 1)
                            {
                                <hr />
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


