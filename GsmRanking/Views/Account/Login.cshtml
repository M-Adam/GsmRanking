@model GsmRanking.Viewmodels.Account.LoginViewModel

@{
    ViewBag.Title = "Zaloguj";
}

<h2>Zaloguj się</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data" asp-antiforgery="true">
        @Html.ValidationSummary(true)
        <div>
            <span class="text-danger">@Html.ValidationSummary()</span>
        </div>
        <div class="form-group">
            Login: <input asp-for="@Model.Login" class="form-control" />
            Hasło: <input asp-for="@Model.Password" class="form-control" /> 
            
        </div>
        <div class="form-group">
            <div class="checkbox">
                <input asp-for="@Model.RememberMe">
                <label asp-for="@Model.RememberMe">Zapamiętaj</label> 
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </form>
    </div>
</div>

