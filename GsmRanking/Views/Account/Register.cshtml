@model GsmRanking.Viewmodels.Account.RegisterViewModel

@{
    ViewBag.Title = "Rejestracja";
}

<h2>Rejestracja</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Register" asp-controller="Account" asp-antiforgery="true" Method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" type="text" class="form-control" placeholder="Twój login" required aria-describedby="usernameHelp" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Adres e-mail" required aria-describedby="emailHelp" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" id="password-input" class="form-control" placeholder="Hasło" required aria-describedby="passwordHelp" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Załóż konto</button>
            
        </form>
    </div>
    <div class="col-md-6" >
        
    </div>
</div>